<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="ActionItem">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:drawablePadding">@dimen/drawable_padding</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/normal_padding</item>
    </style>
    <style name="FilePickerTheme" parent="">
        <!-- Customize your theme here. set LibAppTheme.Dark for dark themes-->

    </style>
    <style name="CustomSnackbarTheme">
        <item name="snackbarStyle">@color/mySnackbarBackgroundColor</item>
    </style>

    <style name="SnackbarColor2" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:backgroundTint">@color/SnackbarColor2</item>
    </style>

</resources>
