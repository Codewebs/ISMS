<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/edge_gradient"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:paddingBottom="18dp"
        android:scrollbarStyle="insideInset">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbarAlwaysDrawVerticalTrack="true">

            <androidx.constraintlayout.widget.Barrier
                android:layout_width="wrap_content"
                android:layout_height="5dp"
                app:barrierDirection="top"
                tools:layout_editor_absoluteX="19dp"
                tools:layout_editor_absoluteY="135dp" />

            <androidx.constraintlayout.widget.Barrier
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="top"
                tools:layout_editor_absoluteX="51dp"
                tools:layout_editor_absoluteY="360dp" />

            <TextView
                android:id="@+id/textTopBuyCoff"
                android:layout_width="409dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="44dp"
                android:background="@color/cardview_shadow_start_color"
                android:rotationY="8"
                android:text="@string/buy_coffeeDonation"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="1dp" />

            <TextView
                android:id="@+id/text_simChoose"
                android:layout_width="155dp"
                android:layout_height="33dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="8dp"
                android:padding="@dimen/dp_8"
                android:text="@string/ChooseSim"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewSelectSimTop" />

            <Button
                android:id="@+id/buttonChangeSim"
                android:layout_width="96dp"
                android:layout_height="48dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="8dp"
                android:text="@string/change"
                app:layout_constraintStart_toEndOf="@+id/text_simChoose"
                app:layout_constraintTop_toBottomOf="@+id/textViewSelectSimTop" />

            <TextView
                android:id="@+id/textViewOpPermissionGranted"
                android:layout_width="409dp"
                android:layout_height="28dp"
                android:layout_marginTop="20dp"
                android:background="@color/cardview_shadow_start_color"
                android:rotationY="8"
                android:text="@string/permissGrant"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/buttonChangeSim"
                tools:layout_editor_absoluteX="1dp" />


            <TextView
                android:id="@+id/textPermission1"
                android:layout_width="140dp"
                android:layout_height="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="24dp"
                android:text="@string/permission1"
                android:textAlignment="center"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewOpPermissionGranted"
                tools:layout_editor_absoluteX="24dp" />

            <TextView
                android:id="@+id/textPermission3"
                android:layout_width="140dp"
                android:layout_height="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="28dp"
                android:text="@string/permission3"
                android:textAlignment="center"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textPermission2"
                tools:layout_editor_absoluteX="23dp" />

            <TextView
                android:id="@+id/textPermission2"
                android:layout_width="140dp"
                android:layout_height="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp"
                android:text="@string/permission2"
                android:textAlignment="center"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textPermission1"
                tools:layout_editor_absoluteX="24dp" />

            <TextView
                android:id="@+id/textViewTopLatence"
                android:layout_width="409dp"
                android:layout_height="25dp"
                android:layout_marginTop="30dp"
                android:background="@color/cardview_shadow_start_color"
                android:rotationY="8"
                android:singleLine="true"
                android:text="@string/latence"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/textPermission4"
                tools:layout_editor_absoluteX="1dp" />

            <EditText
                android:id="@+id/editTextHMTextAds"
                android:layout_width="74dp"
                android:layout_height="48dp"
                android:layout_marginStart="60dp"
                android:layout_marginTop="4dp"
                android:ems="10"
                android:text="@string/hintHMSms"
                android:hint="@string/hintHMSms"
                android:inputType="number"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewDescriptionHManySMS" />

            <TextView
                android:id="@+id/textViewDescriptionHManySMS"
                android:layout_width="409dp"
                android:layout_height="16dp"
                android:layout_marginTop="5dp"
                android:text="@string/descriptionAdSms"
                android:textAlignment="center"
                android:textColor="#9A8E8E"
                android:textSize="12sp"
                android:textStyle="italic"
                app:layout_constraintTop_toBottomOf="@+id/textTopHowManySMSAds"
                tools:layout_editor_absoluteX="1dp" />

            <TextView
                android:id="@+id/textTopHowManySMSAds"
                android:layout_width="409dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@color/cardview_shadow_start_color"
                android:rotationY="8"
                android:text="@string/HowManyBetween"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:typeface="normal"
                app:layout_constraintTop_toBottomOf="@+id/textViewDescriptionLatenceView"
                tools:layout_editor_absoluteX="1dp" />

            <TextView
                android:id="@+id/textViewDescriptionLatenceView"
                android:layout_width="262dp"
                android:layout_height="22dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="28dp"
                android:text="@string/secondDescription"
                android:textColor="#A19696"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/editTextNumberSecond"
                app:layout_constraintTop_toBottomOf="@+id/textViewTopLatence" />

            <EditText
                android:id="@+id/editTextNumberSecond"
                android:layout_width="68dp"
                android:layout_height="48dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:text="@string/seconds"
                android:hint="@string/seconds"
                android:inputType="number"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewTopLatence" />

            <TextView
                android:id="@+id/textViewDescriptionTextHowManySMS"
                android:layout_width="200dp"
                android:layout_height="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="10dp"
                android:text="@string/sms"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toEndOf="@+id/editTextHMTextAds"
                app:layout_constraintTop_toBottomOf="@+id/textViewDescriptionHManySMS" />

            <Button
                android:id="@+id/buttonBuyCoffee"
                android:layout_width="250dp"
                android:layout_height="48dp"
                android:layout_marginStart="55dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="@string/buycoff"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewDescriptBuyCoff"
                tools:layout_editor_absoluteX="80dp"
                tools:layout_editor_absoluteY="114dp" />

            <TextView
                android:id="@+id/textViewSelectSimTop"
                android:layout_width="409dp"
                android:layout_height="21dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="20dp"
                android:background="@color/cardview_shadow_start_color"
                android:rotationY="8"
                android:text="@string/ChooseSim"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/buttonBuyCoffee"
                tools:layout_editor_absoluteX="1dp" />

            <TextView
                android:id="@+id/textViewDescriptBuyCoff"
                android:layout_width="379dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:text="@string/donateDesc"
                android:textColor="#B6A0A0"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@+id/textTopBuyCoff"
                tools:layout_editor_absoluteX="16dp" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/share_excel_floating_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_16"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_marginBottom="4dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_share"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/saveSetting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_16"
                android:layout_marginBottom="60dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_import_contact"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:layout_editor_absoluteX="16dp" />

            <Button
                android:id="@+id/btnPermSms1"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:background="@color/colorPrimary"
                android:text="@string/btnActive"
                app:layout_constraintStart_toEndOf="@+id/textPermission1"
                app:layout_constraintTop_toBottomOf="@+id/textViewOpPermissionGranted" />

            <Button
                android:id="@+id/btnPermStorage2"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="12dp"
                android:background="@color/colorPrimary"
                android:text="@string/btnActive"
                app:layout_constraintStart_toEndOf="@+id/textPermission2"
                app:layout_constraintTop_toBottomOf="@+id/btnPermSms1" />

            <Button
                android:id="@+id/btnPermContact3"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="12dp"
                android:background="@color/colorPrimary"
                android:text="@string/btnActive"
                app:layout_constraintStart_toEndOf="@+id/textPermission3"
                app:layout_constraintTop_toBottomOf="@+id/btnPermStorage2" />

            <Button
                android:id="@+id/btnPermNotif4"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:background="@color/colorPrimary"
                android:text="@string/btnActive"
                android:textColor="#FFFFFF"
                app:layout_constraintStart_toEndOf="@+id/textPermission4"
                app:layout_constraintTop_toBottomOf="@+id/btnPermContact3" />

            <TextView
                android:id="@+id/textPermission4"
                android:layout_width="140dp"
                android:layout_height="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="28dp"
                android:text="@string/permission4"
                android:textAlignment="center"
                android:textSize="16sp"
                app:layout_constraintLeft_toLeftOf="parent"

                app:layout_constraintTop_toBottomOf="@+id/textPermission3"
                tools:layout_editor_absoluteX="24dp" />

            <TextView
                android:id="@+id/textNumCourTop"
                android:layout_width="384dp"
                android:layout_height="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:background="@color/cardview_shadow_start_color"
                android:rotationY="8"
                android:text="@string/usenumcourt"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewDescriptionTextHowManySMS" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="134dp"
                android:layout_height="31dp"
                android:layout_marginStart="52dp"
                android:layout_marginTop="12dp"
                android:text="@string/usenumcourt"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/editTextNumCourt"
                app:layout_constraintTop_toBottomOf="@+id/textNumCourTop" />

            <EditText
                android:id="@+id/editTextNumCourt"
                android:layout_width="109dp"
                android:layout_height="39dp"
                android:layout_marginStart="52dp"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:inputType="number"
                android:hint="@string/editNumCourt"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textNumCourTop" />

            <TextView
                android:id="@+id/textNBChiffreParNumeroTop"
                android:layout_width="384dp"
                android:layout_height="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="20dp"
                android:background="@color/cardview_shadow_start_color"
                android:rotationY="8"
                android:text="@string/HowManyNumByNum"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextNumCourt" />

            <TextView
                android:id="@+id/textVNBChiffreParNumero"
                android:layout_width="134dp"
                android:layout_height="31dp"
                android:layout_marginStart="52dp"
                android:layout_marginTop="12dp"
                android:text="@string/HowManyNumByNum"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/editTextNBChiffreParNumero"
                app:layout_constraintTop_toBottomOf="@+id/textNBChiffreParNumeroTop" />

            <EditText
                android:id="@+id/editTextNBChiffreParNumero"
                android:layout_width="109dp"
                android:layout_height="39dp"
                android:layout_marginStart="52dp"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:text="@string/editHowManyChiff"
                android:inputType="number"
                android:hint="@string/editHowManyChiff"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textNBChiffreParNumeroTop" />

            <TextView
                android:id="@+id/textSMSCTop"
                android:layout_width="384dp"
                android:layout_height="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="20dp"
                android:background="@color/cardview_shadow_start_color"
                android:rotationY="8"
                android:text="@string/SmscCenter"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextNBChiffreParNumero" />

            <TextView
                android:id="@+id/textViewSmsc"
                android:layout_width="134dp"
                android:layout_height="31dp"
                android:layout_marginStart="52dp"
                android:layout_marginTop="12dp"
                android:text="@string/textSmscDescription"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textColorHighlight="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/editTextSMSC"
                app:layout_constraintTop_toBottomOf="@+id/textSMSCTop" />

            <EditText
                android:id="@+id/editTextSMSC"
                android:layout_width="109dp"
                android:layout_height="39dp"
                android:layout_marginStart="52dp"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:inputType="number"
                android:hint="@string/editHowManySmsc"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textSMSCTop" />


            <TextView
                android:id="@+id/textNBVideBottom"
                android:layout_width="384dp"
                android:layout_height="24dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="26dp"
                android:layout_marginBottom="16dp"
                android:background="@color/cardview_shadow_start_color"
                android:rotationY="8"
                android:text="@string/vide"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextSMSC" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>